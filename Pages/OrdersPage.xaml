<Page x:Class="LaundryApp.OrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Заказы">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Список заказов" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <DataGrid x:Name="OrdersDataGrid" AutoGenerateColumns="True" Height="300" Margin="0,0,0,10"/>
            <Button Content="Добавить заказ" Width="150" Click="AddOrderButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
