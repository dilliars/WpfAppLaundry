<Page x:Class="LaundryApp.ClientsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Клиенты">
    <Grid>
        <StackPanel>
            <TextBlock Text="Список клиентов" FontSize="20" Margin="10" />
            <Button Content="Добавить клиента" Margin="10" Click="OnAddClient_Click" />
            <DataGrid x:Name="ClientsDataGrid" AutoGenerateColumns="True" Margin="10" />
        </StackPanel>
    </Grid>
</Page>

