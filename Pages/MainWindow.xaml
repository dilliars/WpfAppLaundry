<Window x:Class="LaundryApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление прачечной" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <!-- Верхняя панель навигации -->
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Клиенты" Click="OnClientsMenu_Click" />
                <MenuItem Header="Заказы" Click="OnOrdersMenu_Click" />
                <MenuItem Header="Статусы" Click="OnStatusesMenu_Click" />
                <MenuItem Header="Отчеты" Click="OnReportsMenu_Click" />
            </Menu>

            <!-- Область контента -->
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />
        </DockPanel>
    </Grid>
</Window>